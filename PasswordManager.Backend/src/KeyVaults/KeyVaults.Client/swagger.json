{
  "openapi": "3.0.1",
  "info": {
    "title": "PasswordManager.KeyVaults.Api.Service",
    "version": "1.0"
  },
  "paths": {
    "/api/keyvaults/protect": {
      "post": {
        "tags": [
          "KeyVault"
        ],
        "summary": "Protects an item",
        "description": "Returns received item in protected form",
        "operationId": "ProtectItem",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProtectItemRequestDetails"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ProtectItemRequestDetails"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ProtectItemRequestDetails"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProtectedItemResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProtectedItemResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProtectedItemResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/keyvaults/unprotect": {
      "post": {
        "tags": [
          "KeyVault"
        ],
        "summary": "Unprotects item",
        "description": "Unprotects item from received objectId and protectedItem",
        "operationId": "UnprotectItem",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UnprotectItemRequestDetails"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UnprotectItemRequestDetails"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UnprotectItemRequestDetails"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProtectedItemsResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProtectedItemsResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProtectedItemsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Item": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": {}
      },
      "ProtectItemRequestDetails": {
        "required": [
          "items",
          "secretKey"
        ],
        "type": "object",
        "properties": {
          "secretKey": {
            "type": "string"
          },
          "item": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ProtectedItemResponse": {
        "required": [
          "protectedItem"
        ],
        "type": "object",
        "properties": {
          "protectedItem": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ProtectedItemsResponse": {
        "type": "object",
        "properties": {
          "protectedItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UnprotectedItemResponse"
            }
          }
        },
        "additionalProperties": false
      },
      "UnprotectItemRequestDetails": {
        "required": [
          "items",
          "secretKey"
        ],
        "type": "object",
        "properties": {
          "secretKey": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Item"
            }
          }
        },
        "additionalProperties": false
      },
      "UnprotectedItemResponse": {
        "required": [
          "itemId",
          "unprotectedItem"
        ],
        "type": "object",
        "properties": {
          "unprotectedItem": {
            "type": "string"
          },
          "itemId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      }
    }
  }
}